{
    "tasks": [
        {
            "label": "Deploy Runtime Files",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}\\.vscode\\deploy.ps1"
            ],
            "problemMatcher": [],
            "detail": "Deploy all runtime dependencies to x64/Release"
        },
        {
            "label": "Build AARcade Core",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}\\.vscode\\build.ps1"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Deploy Runtime Files"],
            "detail": "Build AARcade Core with MSVC"
        }
    ],
    "version": "2.0.0"
}
